<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:id="@+id/containerFragmentListViewAllScreen">

    <!-- Contenedor del Fragment ListView para Tablet -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:id="@+id/containerFragmentListViewHalfScreen">
    </FrameLayout>

    <!-- Contenedor del Fragment Product Details para Tablet  -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:id="@+id/containerFragmentDetailProduct">
    </FrameLayout>

</LinearLayout>
