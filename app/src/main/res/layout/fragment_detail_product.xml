<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gabriel.mercadoabierto.DetailProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/image_producto_detail"
            android:src="@drawable/ford_fiesta"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_product_name_detail"
                android:text="Camara KODAK"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_product_price_detail"
                android:text="$4.500"
                android:textColor="@color/colorTextProductPrice"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_product_advertizer"
                android:text="Anunciante: Carlos Garcia"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/text_product_description"
        android:layout_weight="1"
        android:textSize="22dp"
        android:textColor="@color/colorTextProductName"
        android:background="@color/colorBackgroundDescriptionBottomText"
        android:text="Computador Marca Asus el mejor local de venta de PCs de Argentina"/>

</LinearLayout>
